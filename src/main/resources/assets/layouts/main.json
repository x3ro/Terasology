    "controller": "MainMenuController",

    "children": [
        {
            "id": "version-number",
            "component": "UILabel",
            "style": {
                "default": {
                    "text": "Pre Alpha",
                    "position": [0, 230],
                    "horizontalAlign": "center",
                    "verticalAlign": "top",
                    "textShadow": true
                }
            }
        },

        {
            "id": "terasology-logo",
            "component": "UIImage",
            "style": {
                "default": {
