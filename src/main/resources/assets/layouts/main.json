{
    "id": "main-menu",
    "controller": "UIMainMenu",

    "children": [
        {
            "id": "version-number",
            "component": "UILabel",
            "style": {
                "default": {
                    "text": "Pre Alpha",
                    "position": [0, 230],
                    "horizontalAlign": "center",
                    "verticalAlign": "top",
                    "textShadow": true
                }
            }
        },

        {
            "id": "terasology-logo",
            "component": "UIImage",
            "style": {
                "default": {
                    "image": "engine:terasology",
                    "size": [512, 128],
                    "position": [0, 128],
                    "horizontalAlign": "center"
                }
            }
        },

        {
            "id": "exit-button",
            "component": "UIButton",
            "style": {
                "default": {
                    "text": "Exit Terasology",
                    "size": [256, 32],
                    "position": [0, 540],
                    "horizontalAlign": "center"
                }
            }
        }
    ],

    "style": {
        "default": {
            "backgroundImage": "engine:menubackground"
        }
    }
}